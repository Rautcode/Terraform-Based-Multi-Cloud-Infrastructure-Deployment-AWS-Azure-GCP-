# Azure Configuration Examples
# Copy this file to terraform.tfvars and fill in your actual values

# Azure subscription ID (required)
subscription_id = "your-azure-subscription-id-here"

# Azure region where resources will be deployed
location = "East US"

# Resource group name (will have "-rg" appended)
resource_group_name = "multicloud-demo"

# Virtual machine configuration
vm_name = "azure-vm-demo"
vm_size = "Standard_B1s"

# Admin credentials for the VM
admin_username = "azureuser"
admin_password = "YourSecurePassword123!"

# VM Image configuration (Ubuntu 20.04 LTS example)
image_publisher = "Canonical"
image_offer     = "0001-com-ubuntu-server-focal"
image_sku       = "20_04-lts-gen2"
